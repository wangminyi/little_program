page {
  height: 100%;
}

.connect-page {
  width: 100%;
  height: 100%;
  position: absolute;
}

.body-panel {
  height: calc(100% - 100px);
  width: 100%;
  display: flex;
  flex-direction: row;
}

.left-part, .right-part {
  flex: 1;
}

.left-part {
  padding-top: 100px;
}

.search-btn {
  width: 100px;
  line-height: 100px;
  text-align: center;
  border-radius: 50%;
  background-color: red;
  color: white;
  margin: auto;
}

.search-btn.disabled {
  background-color: gray;
}

.footer-panel {
  padding: 10px;
  height: 100px;
  background-color: black;
  color: white;
  font-size: 16px;
  box-sizing: border-box;
}
